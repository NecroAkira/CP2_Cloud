{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "NomeAKV": {
        "type": "string",
        "defaultValue": "Lucas97095",
        "metadata": {
          "description": "The name of the key vault to be created."
        }
      },
      "NomeChave": {
        "type": "string",
        "defaultValue": "97095",
        "metadata": {
          "description": "The name of the key to be created."
        }
      },
      "location": {
        "type": "string",
        "defaultValue": "[resourceGroup().location]",
        "metadata": {
          "description": "The location of the resources"
        }
      },
      "skuName": {
        "type": "string",
        "defaultValue": "standard",
        "allowedValues": [
          "standard",
          "premium"
        ],
        "metadata": {
          "description": "The SKU of the vault to be created."
        }
      },
      "keyType": {
        "type": "string",
        "defaultValue": "RSA", 
        "allowedValues": [
          "EC",
          "EC-HSM",
          "RSA",
          "RSA-HSM"
        ],
        "metadata": {
          "description": "The JsonWebKeyType of the key to be created."
        }
      },
      "keyOps": {
        "type": "array",
        "defaultValue": ["sign", "verify", "encrypt", "decrypt"], 
        "allowedValues": ["sign", "verify", "encrypt", "decrypt", "wrapKey", "unwrapKey"],
        "metadata": {
          "description": "The permitted JSON web key operations of the key to be created."
        }
      },
      "keySize": {
        "type": "int",
        "defaultValue": 2048,
        "metadata": {
          "description": "The size in bits of the key to be created."
        }
      },
      "curveName": {
        "type": "string",
        "defaultValue": "P-256K",
        "allowedValues": [
          "",
          "P-256",
          "P-256K",
          "P-384",
          "P-521"
        ],
        "metadata": {
          "description": "The JsonWebKeyCurveName of the key to be created."
        }
      },
      "noPrompt": {
        "type": "bool",
        "defaultValue": true,
        "metadata": {
          "description": "During the creation phase, no information should be entered in the Azure Command Line Interface (CLI) prompt."
        }
      },
      "testResourceGroup": {
        "type": "string",
        "defaultValue": "ProvaCP2",
        "metadata": {
          "description": "Any ARM testing should be done within the Resource Group ProvaCP2."
        }
      },
      "storageAccountName": {
        "type": "string",
        "defaultValue": "rm97095",
        "metadata": {
          "description": "The name of the storage account to be used within the ProvaCP2 resource group for Azure CLI."
        }
      }
    },
    "resources": [
      {
        "type": "Microsoft.KeyVault/vaults",
        "apiVersion": "2021-11-01-preview",
        "name": "[parameters('NomeAKV')]",
        "location": "[parameters('location')]",
        "properties": {
          "accessPolicies": [],
          "enableRbacAuthorization": true,
          "enableSoftDelete": true,
          "softDeleteRetentionInDays": "90",
          "enabledForDeployment": false,
          "enabledForDiskEncryption": false,
          "enabledForTemplateDeployment": false,
          "tenantId": "[subscription().tenantId]",
          "sku": {
            "name": "[parameters('skuName')]",
            "family": "A"
          },
          "networkAcls": {
            "defaultAction": "Allow",
            "bypass": "AzureServices"
          }
        }
      }
    ] 
  }
  